#include <iostream> 
int main(){
int n;
long double x=0,y=1,z=0,l=0;

do
{
if (l==0)
{
    std::cout<<"introduce un numero mayor a 1: ";
    std::cin>>n;
    l=1;
}else{
    std::cout<<"el numero "<< n << " es menor a 1";
    std::cin>>n;
    }
} while (n<1);
std::cout<<1<<"  ";
for (int i = 1; i <= n; i++)
{
    z=x+y;
    std::cout<<z<<"  ";
    x=y;
    y=z;

}
std::cout<<"\n";


 system("pause");
 return 0;
}
